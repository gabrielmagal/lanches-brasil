@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center" style="background-image: url('https://images.unsplash.com/photo-1510627498534-cf7e9002facc?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNjUyOXwwfDF8c2VhcmNofDR8fGZvb2R8ZW58MHx8fHwxNjk5OTg5Mzc3&ixlib=rb-4.0.3&q=80&w=1080'); background-size: cover; padding: 60px 20px; color: white;">
    <h1 class="display-3 font-weight-bold">Bem-vindo ao LanchesBrasil!</h1>
    <p class="lead">Encontre seus pratos favoritos e receba onde quiser.</p>
    <a class="btn btn-primary btn-lg mt-3" href="/restaurants" role="button">Ver Restaurantes</a>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Descubra as opções</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNjUyOXwwfDF8c2VhcmNofDh8fHBpenphfGVufDB8fHx8MTY5OTk4OTM3Nw&ixlib=rb-4.0.3&q=80&w=400" alt="Categorias" class="img-fluid rounded-circle mb-3" style="width: 80px;">
            <h4>Categorias</h4>
            <p>Explore diferentes categorias e encontre sua comida favorita.</p>
            <a href="/categories" class="btn btn-outline-primary">Ver Categorias</a>
        </div>
        <div class="col-md-4">
            <img src="https://images.unsplash.com/photo-1551218808-94e220e084d2?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNjUyOXwwfDF8c2VhcmNofDI5fHxoYW1idXJnfGVufDB8fHx8MTY5OTk4OTM3Nw&ixlib=rb-4.0.3&q=80&w=400" alt="Promoções" class="img-fluid rounded-circle mb-3" style="width: 80px;">
            <h4>Promoções</h4>
            <p>Aproveite as melhores ofertas e descontos exclusivos.</p>
            <a href="/deals" class="btn btn-outline-primary">Ver Promoções</a>
        </div>
        <div class="col-md-4">
            <img src="https://images.unsplash.com/photo-1611068562065-994ba66501ba?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNjUyOXwwfDF8c2VhcmNofDl8fGRlbGl2ZXJ5fGVufDB8fHx8MTY5OTk4OTM3Nw&ixlib=rb-4.0.3&q=80&w=400" alt="Entrega Rápida" class="img-fluid rounded-circle mb-3" style="width: 80px;">
            <h4>Entrega Rápida</h4>
            <p>Receba seu pedido em minutos, onde estiver.</p>
            <a href="/delivery-info" class="btn btn-outline-primary">Saiba Mais</a>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Restaurantes em Destaque</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="https://images.unsplash.com/photo-1551782450-a2132b4ba21d" class="card-img-top" alt="Restaurante Italiano">
                <div class="card-body">
                    <h5 class="card-title">Restaurante Italiano</h5>
                    <p class="card-text">Oferecendo o melhor da culinária italiana.</p>
                    <a href="/restaurant-details?id=1" class="btn btn-primary">Ver Mais</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="https://images.unsplash.com/photo-1528605248644-14dd04022da1" class="card-img-top" alt="Restaurante de Churrasco">
                <div class="card-body">
                    <h5 class="card-title">Restaurante de Churrasco</h5>
                    <p class="card-text">Uma experiência única em churrasco.</p>
                    <a href="/restaurant-details?id=2" class="btn btn-primary">Ver Mais</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4" class="card-img-top" alt="Restaurante Vegano">
                <div class="card-body">
                    <h5 class="card-title">Restaurante Vegano</h5>
                    <p class="card-text">As melhores opções vegetarianas e veganas.</p>
                    <a href="/restaurant-details?id=3" class="btn btn-primary">Ver Mais</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 8px;
    }

    h1, h2 {
        font-family: 'Roboto', sans-serif;
    }

    .btn-primary {
        background-color: #FF3D00;
        border-color: #FF3D00;
    }

    .btn-primary:hover {
        background-color: #D83600;
        border-color: #D83600;
    }
</style>
